<%= form_with model:group, local:true do |f| %>

<div class="form-group">
  <%= f.label :グループ名 %><br>
  <%= f.text_field :name, class: 'form_control book_title' %>
</div>

<div class="form-group">
  <%= f.label :紹介文 %><br>
  <%= f.text_area :introduction, class: 'form_control book_body' %>
</div>

<div class="form-group">
  <%= f.label :グループ画像 %><br>
  <%= f.file_field :image, class: 'form_control-file' %>
</div>

<div class="form-group">
  <%= f.submit class: 'btn btn-primary' %>
</div>

<% end %>